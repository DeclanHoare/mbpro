{
	"manifest_version": 2,
	"name": "MBPRO for ManageBac",
	"author": "Declan Hoare",
	"description": "Makes ManageBac easier to use",
	"version": "1",
	"icons":
	{
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions":
	[
		"https://*.managebac.com/",
		"http://*.managebac.com/",
		"cookies",
		"tabs",
		"storage",
		"unlimitedStorage"
	],
	"content_scripts":
	[
		{
			"run_at": "document_end",
			"matches":
			[
				"https://*.managebac.com/*",
				"http://*.managebac.com/*"
			],
			"js":
			[
				"scripts/jquery-3.3.1.min.js",
				"scripts/managebacpro.js"
			]
		}
	]
}

